<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="優先度：" />

        <ImageButton
            android:id="@+id/btnPriority1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_weight="1"
            android:background="@color/white"
            android:src="@drawable/ic_action_star_border_black" />

        <ImageButton
            android:id="@+id/btnPriority2"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:src="@drawable/ic_action_star_border_black" />

        <ImageButton
            android:id="@+id/btnPriority3"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:src="@drawable/ic_action_star_border_black" />

        <ImageButton
            android:id="@+id/btnPriority4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_weight="1"
            android:background="@color/white"
            android:src="@drawable/ic_action_star_border_black" />

        <ImageButton
            android:id="@+id/btnPriority5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_weight="1"
            android:background="@color/white"
            android:src="@drawable/ic_action_star_border_black" />
    </LinearLayout>

    <EditText
        android:id="@+id/edtUpdateToDoList"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:textStyle="italic"
        android:textSize="25sp"
        android:hint="勉強する" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="40"
        android:gravity="right"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:background="@drawable/shapebtn"
            android:backgroundTint="#C6C2C2"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update" />
    </LinearLayout>
</LinearLayout>